@inherits LayoutComponentBase

<MudDialogProvider />
<MudThemeProvider />
<MudSnackbarProvider />

<MudThemingProvider IsDarkMode="true" />
<MudLayout>
    <MudMainContent>
        <MudAppBar Elevation="0">
            <NavigationMenu />
        </MudAppBar>
        <MudContainer MaxWidth="MaxWidth.ExtraLarge" Class="pb-10">
            <MudPaper Height="100%" Square="true" Elevation="2" Class="pa-8 overflow-y-scroll">
                <CascadingValue Value="PageTitle">
                    @Body
                </CascadingValue>
            </MudPaper>
        </MudContainer>
        <MudAppBar Bottom="true" Fixed="true">Hello Footer</MudAppBar>
    </MudMainContent>
</MudLayout>