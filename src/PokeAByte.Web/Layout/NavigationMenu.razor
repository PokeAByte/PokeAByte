@using PokeAByte.Web.Services
@using PokeAByte.Web.Services.Navigation
<MudGrid Class="d-flex">
     <MudItem sm="4"
              Style="overflow: hidden"
              Class="align-start justify-start align-content-center">
          <MudHidden Breakpoint="Breakpoint.MdAndUp" Invert="true">
               <MudLink Typo="Typo.h5"
                        Class="ml-3 mr-9"
                        Underline="Underline.None"
                        Color="@(ConnectionService?.GetCurrentConnectionColor() ?? Color.Secondary)"
                        OnClick="OnClickHomeButton">
                    Poke-A-Byte
               </MudLink>
          </MudHidden>
          <MudHidden Breakpoint="Breakpoint.MdAndUp" Invert="false">
               <MudIconButton Icon="@Icons.Material.Filled.Home"
                              OnClick="OnClickHomeButton"
                              Variant="Variant.Text"
                              Size="Size.Large"
                              Class="mr-1" 
                              DropShadow="true"/>
               </MudHidden>
     </MudItem>
     <MudItem sm="4" xs="12" Style="@(_breakpointStyle)"
              Class="d-flex align-center justify-center align-content-center">
          <MudButtonGroup OverrideStyles="false">
               <MudButton StartIcon="@Icons.Material.Filled.CatchingPokemon"
                          Variant="Variant.Filled"
                          IconColor="@(ConnectionService?.GetCurrentConnectionColor() ?? Color.Secondary)"
                          Size="Size.Large"
                          Color="@GetActiveColor(NavigationService.Pages.MapperManager)"
                          Disabled="NavService!.IsButtonDisabled(NavigationService.Pages.MapperManager) ?? false"
                          OnClick="() => NavButtonClickHandler(NavigationService.Pages.MapperManager)"
                          Class="@_buttonBorder">
                    Mappers
               </MudButton>
               <MudButton StartIcon="@Icons.Material.Filled.Api"
                          Variant="Variant.Filled"
                          IconColor="@(ConnectionService?.GetCurrentConnectionColor() ?? Color.Secondary)"
                          Size="Size.Large"
                          Color="@GetActiveColor(NavigationService.Pages.Properties)"
                          Disabled="NavService!.IsButtonDisabled(NavigationService.Pages.Properties) ?? false"
                          OnClick="() => NavButtonClickHandler(NavigationService.Pages.Properties)"
                          Class="@_buttonBorder">
                    Properties
               </MudButton>
               <MudButton StartIcon="@Icons.Material.Filled.Build"
                          Variant="Variant.Filled"
                          IconColor="@(ConnectionService?.GetCurrentConnectionColor() ?? Color.Secondary)"
                          Size="Size.Large"
                          Color="@GetActiveColor(NavigationService.Pages.AppSettings)"
                          Disabled="NavService!.IsButtonDisabled(NavigationService.Pages.AppSettings) ?? false"
                          OnClick="() => NavButtonClickHandler(NavigationService.Pages.AppSettings)"
                          Class="@_buttonBorder">
                    Settings
               </MudButton>
          </MudButtonGroup>
     </MudItem>
     <MudItem sm="4"
              Class="d-flex align-end justify-end align-content-end">
          <MudHidden Breakpoint="Breakpoint.SmAndUp" Invert="true">
               <MudTooltip Text="@(ConnectionService?.ConnectionStatus)">
                    <MudIconButton Icon="@Icons.Material.Filled.PowerSettingsNew"
                                   Size="Size.Large"
                                   Color="ConnectionService!.GetCurrentConnectionColor()"
                                   Disabled="NavService!.IsButtonDisabled(NavigationService.Pages.MapperConnectionStatus) ?? false"
                                   OnClick="() => NavButtonClickHandler(NavigationService.Pages.MapperManager)"
                                   aria-label="connection status"/>
               </MudTooltip>
          </MudHidden>
     </MudItem>
</MudGrid>