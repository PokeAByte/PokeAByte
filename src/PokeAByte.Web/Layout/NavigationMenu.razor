@using PokeAByte.Web.Services
<MudButtonGroup OverrideStyles="false">
    <MudButton @ref="_mapperManager"
               StartIcon="@Icons.Material.Filled.CatchingPokemon"
               Variant="Variant.Filled"
               IconColor="Color.Secondary"
               Size="Size.Large"
               DisableElevation="true"
               OnClick="() => 
                    NavButtonClickHandler(NavigationService.Pages.Home, _mapperManager)"
               Class="@_buttonBorder">
        Mappers
    </MudButton>
    <MudButton @ref="_dataProperties"
               StartIcon="@Icons.Material.Filled.Api"
               Variant="Variant.Filled"
               IconColor="Color.Secondary"
               Size="Size.Large"
               DisableElevation="true"
               OnClick="() => 
                    NavButtonClickHandler(NavigationService.Pages.DataProperties, _dataProperties)"
               Class="@_buttonBorder">
        Properties
    </MudButton>
    <MudButton @ref="_appSettings"
               StartIcon="@Icons.Material.Filled.Build"
               Variant="Variant.Filled"
               IconColor="Color.Secondary"
               Size="Size.Large"
               DisableElevation="true"
               OnClick="() => 
                    NavButtonClickHandler(NavigationService.Pages.AppSettings, _appSettings)"
               Class="@_buttonBorder">
        Settings
    </MudButton>
</MudButtonGroup>
<MudSpacer/>
<MudText>Connection Status: </MudText>
<MudIconButton @ref="_connectionStatus"
               Icon="@Icons.Material.Filled.PowerSettingsNew"
               Size="Size.Large"
               Color="ConnectionService!.GetCurrentConnectionColor()"
               OnClick="() => 
                    NavButtonClickHandler(NavigationService.Pages.MapperConnectionStatus, _connectionStatus)"
               aria-label="connection status"/>
