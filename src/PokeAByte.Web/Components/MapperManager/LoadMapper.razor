@if (!_isMapperLoading)
{
    <MudGrid>
        <MudItem xs="12">
            <MudText Typo="Typo.body1">
                Please select a mapper file you would like to load:
            </MudText>
        </MudItem>
        <MudItem xs="12">
            <MudSelect T="string"
                       SelectedValuesChanged="SelectedValueChangeHandler"
                       Label="Mapper"
                       AnchorOrigin="Origin.BottomCenter">
                <MudSelectItem Value="string.Empty"/>
                @if (_mapperFiles is not null)
                {
                    @foreach (var mapper in _mapperFiles)
                    {
                        <MudSelectItem Value="@mapper.Id">
                            @mapper.DisplayName
                        </MudSelectItem>
                    }
                }
            </MudSelect>
        </MudItem>
        <MudItem xs="6">
            <MudButton Variant="Variant.Filled"
                       FullWidth="true"
                       OnClick="LoadMapperOnClickHandler"
                       Disabled="string.IsNullOrWhiteSpace(_selectedMapperId)">
                Load Mapper
            </MudButton>
        </MudItem>
        <MudItem xs="6">
            <MudButton Variant="Variant.Filled" FullWidth="true">Open Mapper Folder</MudButton>
        </MudItem>

    </MudGrid>
}
else
{
    <MudText Typo="Typo.body1">
        Loading Mapper - Please Wait...
    </MudText>
    <MudProgressCircular Color="Color.Secondary" Indeterminate="true" />
}
