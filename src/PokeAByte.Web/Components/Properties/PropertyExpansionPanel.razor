<MudPaper Width="100%" 
          Height="@PropertyHeight"
          Class="px-4 ml-n8 py-2 d-flex align-center cursor-pointer">
    <MudStack>
        <MudGrid Spacing="3"
                 Justify="Justify.FlexStart"
                 @onclick="() => Context.IsPropertyExpanded = !Context.IsPropertyExpanded">
            <MudItem>
                <MudIconButton Icon="@Icons.Material.Filled.CatchingPokemon"
                               Color="@SetIconColor"
                               aria-label="expand-panel"
                               Class="ml-auto mud-width-full d-flex pt-1"
                               OnClick="() => Context.IsPropertyExpanded = !Context.IsPropertyExpanded"/>
            </MudItem>
            <MudItem Class="align-content-center">
                <MudText Typo="Typo.body2" Style="@Width" Class="d-flex justify-start">
                    @Context.Name:
                </MudText>
            </MudItem>
            <MudItem Class="align-center">
                <PropertyValueEditor EditContext="_editContext"/>
            </MudItem>
        </MudGrid>
        <MudContainer Fixed="true" Style="@DisplayContent">
            <PropertyTableView Context="_editContext"/>
        </MudContainer>
    </MudStack>
</MudPaper>