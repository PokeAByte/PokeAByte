<MudPaper Width="100%" 
          Height="@PropertyHeight"
          Class="px-4 ml-n8 py-2 d-flex align-center"
          Style="cursor: pointer;"
          id="expansionPanel">
    <MudStack id="mudStack"
              Class="flex-grow-1">
        <MudGrid Spacing="3"
                 Justify="Justify.FlexStart"
                 id="mudGrid">
            <MudItem @onclick="OnClickExpand"
                id="mudItemIcon">
                <MudIcon Icon="@Icons.Material.Filled.CatchingPokemon"
                               Color="SetIconColor"
                               id="expansionBall"
                               Class="ml-auto mud-width-full d-flex pt-1"/>
            </MudItem>
            <MudItem @onclick="OnClickExpand"
                     Class="align-content-center" id="mudItem2">
                <MudText Typo="Typo.body2" Style="@Width" Class="d-flex justify-start" id="mudText">
                    @Context.Name:
                </MudText>
            </MudItem>
            <MudItem Class="align-center cursor-default" id="mudItem3">
                <PropertyValueEditor EditContext="_editContext"/>
            </MudItem>
            <MudItem @onclick="OnClickExpand"
                     Class="align-content-center flex-grow-1" Style="width: auto;"></MudItem>
        </MudGrid>
        <MudContainer Fixed="true" Style="@DisplayContent" Class="cursor-default">
            <PropertyTableView Context="_editContext"/>
        </MudContainer>
    </MudStack>
</MudPaper>
